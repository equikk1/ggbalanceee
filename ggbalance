  <script>
    function toggleTheme() {
      document.body.classList.toggle('light');
      document.body.classList.toggle('dark');
    }

    let selectedGame = '';
    let selectedItem = '';

    function buy(game, item) {
      selectedGame = game;
      selectedItem = item;
      document.getElementById('modal').style.display = 'flex';
      document.getElementById('modal-title').innerText = `–ü–æ–∫—É–ø–∫–∞ ‚Äî ${game}`;
      document.getElementById('modal-desc').innerText = `–í—ã –≤—ã–±—Ä–∞–ª–∏: ${item}`;
    }

    function confirmBuy() {
      const userId = document.getElementById('user-id').value;
      if (!userId) return alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏—Ç–µ –≤–∞—à ID –∏–ª–∏ –ø–æ—á—Ç—É.');
      alert(`–í—ã –∑–∞–∫–∞–∑–∞–ª–∏ ${selectedItem} –¥–ª—è ${selectedGame}. –í–∞—à ID: ${userId}. –ù–∞—à –∞–¥–º–∏–Ω @equikk1 —Å–≤—è–∂–µ—Ç—Å—è —Å –≤–∞–º–∏.`);
      document.getElementById('modal').style.display = 'none';
      document.getElementById('user-id').value = '';
    }

    window.onclick = function(event) {
      if (event.target == document.getElementById('modal')) {
        document.getElementById('modal').style.display = 'none';
      }
    }
  </script>
